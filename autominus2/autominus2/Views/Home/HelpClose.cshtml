@model autominus2.Models.Question

@{
    ViewBag.Title = "Uždaryti klausimą";
}

<h2>Klausimo uždarymas</h2>

<h3>Ar tikrai norite uždaryti šį klausimą?</h3>
<div>
    <h4>Klausimas:</h4>
    <hr />
    <dl class="dl-horizontal">

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.QuestionInDB, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.QuestionInDB, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.QuestionInDB, "", new { @class = "text-danger" })
                </div>
            </div>
            </div>
            @*<dt>
                @Html.DisplayNameFor(model => autominus2.Utils.ModeratorRepo.getUser(model.fk_user_id).Email)
            </dt>*@


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (ViewBag.naudojama != null)
            {
                <h5 style="color:red">@ViewBag.naudojama</h5>
            }
            else
            {
                <input type="submit" value="Uždaryti" class="btn btn-danger" />
            }
        </div>
    }
</div>
